<div class="promocode-card {{#if stock}}promocode-card__stock{{/if}} {{#if past}}promocode-card__past{{/if}} {{#if small}}promocode-card__small{{/if}} d-flex flex-column w-100"
     {{#if stock}}data-show-modal="overlay-discount"
     {{else}}data-show-modal="overlay-promo"
     {{/if}} data-modal-promo>
    <div class="promocode-card__top d-flex align-items-center w-100">
        {{#if discont}}
            <p class="promocode-card__discont flex-center flex-shrink">{{discont}}</p>
        {{else if promo}}
            <p class="promocode-card__promo flex-center flex-shrink">Промокод</p>
        {{else if promotion}}
            <p class="promocode-card__promotion flex-center flex-shrink">Акция</p>
        {{else if images}}
            <div class="promocode-card__images flex-center flex-shrink">
                <img src="{{images}}" alt="">
            </div>
        {{/if}}

        <div class="promocode-card__content d-flex justify-content-between align-items-center w-100">
            <div>
                <p class="promocode-card__hint">{{hint}}</p>
                <p class="promocode-card__title">{{title}}</p>
                {{#if past}}
                    <p class="promocode-card__users d-flex align-items-center">
                        <svg class="me-1">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="./assets/img/icon/icons.svg#icon-clock"></use>
                        </svg>
                        Истекший</p>
                {{else}}
                    <p class="promocode-card__users">{{users}}</p>
                {{/if}}
            </div>
            {{#if stock}}
                <button class="btn btn-primary btn-mobile flex-center ms-1">
                    <span class="d-none d-md-flex">Получить скидку</span>
                    <svg class="d-md-none d-block">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="./assets/img/icon/icons.svg#icon-arrow"></use>
                    </svg>
                </button>
            {{else if past}}
                <button class="btn btn-orange btn-mobile flex-center ms-1">
                    <span class="d-none d-md-flex">Открыть промокод</span>
                    <svg class="d-md-none d-block">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="./assets/img/icon/icons.svg#icon-arrow"></use>
                    </svg>
                </button>
            {{else}}
                <button class="btn btn-promo btn-mobile ms-1">
                    <span class="d-none d-md-flex">FGRT567SALE976567</span>
                    <span class="btn-promo__top flex-center d-none d-md-flex">Показать код</span>
                    <svg class="d-md-none d-block">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="./assets/img/icon/icons.svg#icon-arrow"></use>
                    </svg>
                </button>
            {{/if}}

        </div>
    </div>
    <div class="promocode-card__detail js--show-more" data-notshow-modal>
        <div class="promocode-card__detail-top d-flex align-items-center js--show-more-btn cursor-pointer" data-notshow-modal>
            <p class="font-medium me-1">See Details</p>
            {{> plus/plus}}
        </div>
        <div class="show-more js--show-more-content">
            <div class="pt-1 pt-sm-2 pb-1 pb-sm-4">
                <p class="d-flex d-md-none align-items-center">
                    <svg class="d-md-none d-block">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="./assets/img/icon/icons.svg#icon-clock"></use>
                    </svg>
                    25 ноября 2024
                </p>
                <p class="d-none d-md-flex">Действителен до: 28.05.25</p>
                <p class="mt-1 mt-sm-3">Кликните на купон, чтобы использовать выгодные скидки!</p>
            </div>
        </div>
    </div>
</div>